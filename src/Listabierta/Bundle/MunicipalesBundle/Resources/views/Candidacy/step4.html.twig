{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'candidacy.step4.html_title'|trans }}{% endblock %}

{% form_theme form 'MunicipalesBundle:theme:forms.html.twig' %}
{% from 'MunicipalesBundle:macros:steps.html.twig' import steps_widget %}

{% block content %}
<section class="section-2">
	<div class="container marketing">

        <div class="headline">
          <h2>{{ 'home.step_h2'|trans }} 4</h2>
        </div>
        
        <h3 class="featurette-headin"> <i>{{ 'candidacy.step4.h1_title'|trans }}</i></h3>
        
        <!-- START THE FEATURETTES -->

        <!--    division -->
        
        {{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}
        
        <div class="row featurette2">
          <div class="widget-box">
            

            <div class="widget-body">
              <div class="widget-main">
              
              	
              	
                <div id="fuelux-wizard-container">
                  	{{ steps_widget(4) }}
                  
				  	<hr>

                	<div class="step-content pos-rel container-fluid">
                  
	                  <div class="row">
				        	<h2 class="col-md-8 col-sm-offset-2 text-center">{{ 'candidacy.step4.choose_address'|trans }}</h2>
				      </div>
			          
			          <hr class="featurette-divider2">
			            
					  {% if not form.vars.valid and form.vars.errors|length > 0 %}
	                  <div class="alert alert-danger">
	                          <button data-dismiss="alert" class="close" type="button">
	                            <i class="mine-icon fa fa-times"></i>
	                          </button>
	                          {{ form_errors(form) }}
	                  </div>
	                  {% endif %}

			           <div data-step="1" class="step-pane active col-xs-12">
			
			              <div class="col-md-offset-2 col-md-9 form-horizont">
				                <div class="widget-box2">
				
				                  <div class="widget-body">
				                    <div class="widget-main">
			                      
			
			                  
			                            <div class="form-group{% if form.address.vars.errors|length > 0 %} has-error{% endif %}">
			                              <div class="input-group">
			                                <div class="input-group-addon">
			                                  <span class="mine-icon fa fa-check2"><span style="font-size: 22px;">http://{{ host }}/ </span></span>
			                                </div>
			                                
											<div class="col-xs-12 col-sm-12" style="padding-left: 0px;">
										    	<span class="block input-icon input-icon-right">
										        	<input type="text" id="{{ form.address.vars.id }}" name="{{ form.vars.id }}[{{ form.address.vars.name }}]" required="required" class="form-control input-mask" style="font-size: 22px;width: 100%; display: table-cell;background-image: none; background-position: 0% 0%; background-repeat: repeat;" value="{{ form.address.vars.value|default(default_address_slug) }}"> 
										        </span>
										    </div>
										    {% if form.address.vars.errors|length > 0 %}<div class="help-block col-xs-12 col-sm-reset inline">{{ form_errors(form.address) }}{% endif %}
											{% do form.address.setRendered %}
			                              </div>
			                            </div>
			                            
			                            <div class="help-block col-xs-12 col-sm-10 col-sm-offset-1 inline">
			                            	<div class="alert alert-warning">
			                            		{{ 'candidacy.step4.warning'|trans({'%host%' : host }) }}
			                            	</div>
			                            </div>
			
			                    </div>
			                  </div>
			                </div>
			              </div>
			            </div>
                      
                    </div>
                    
                    
                    
                  </div>
                  
                  <hr>
	                <div class="wizard-actions">
	
					  <button class="btn btn-prev" onclick="location.href='{{ path('municipales_candidacy_step3') }}'; return false;">
	                    <i class="mine-icon fa fa-arrow-left"></i>
	                    {{ 'candidacy.step4.previous'|trans }}
	                  </button>
	                  
	                  {{ form_widget(form.continue, { 'label': 'candidacy.step4.continue'|trans|raw, 'attr' : { 'class' : 'submit btn btn-success btn-next'} }) }}
	
	                </div>
                
                </div>

                
              </div>
              
              
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>

        {{ form_rest(form) }}
			
		{{ form_end(form) }}
			  
        <!--    division -->

        <!-- /END THE FEATURETTES --> 
        </div>
</section>
{% endblock %}